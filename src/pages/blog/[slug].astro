---
import Layout from '../../layouts/Layout.astro';
import { getEntryBySlug, getCollection, type CollectionEntry } from 'astro:content';

// å‹•çš„ãƒ«ãƒ¼ãƒˆã®ãƒ‘ã‚¹ã‚’ç”Ÿæˆ
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post: CollectionEntry<'posts'>) => ({
    params: { slug: post.slug }
  }));
}

// å‹ã‚’æ˜ç¤º
const { slug } = Astro.params;
const post = await getEntryBySlug('posts', slug) as CollectionEntry<'posts'>;

if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}

const { Content } = await post.render();
---

<Layout>
  <article class="blog-article">
    <h1 class="blog-article-title">{post.data.title}</h1>
    <p class="blog-article-meta">
      ğŸ“… {post.data.pubDate} | ğŸ“ {post.data.author}
    </p>
    <div class="blog-article-tags">
      {post.data.tags.map((tag: string) => (
        <span class="blog-article-tag">#{tag}</span>
      ))}
    </div>
    <div class="blog-article-content">
      <Content />
    </div>
  </article>
</Layout>

<style>
.blog-article {
  max-width: 800px;
  margin: 2rem auto;
  padding: 2rem;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.blog-article-title {
  font-family: "Varela Round", sans-serif;
  font-size: 2.2rem;
  color: #0077cc;
  margin-bottom: 1rem;
  text-align: center;
}

.blog-article-meta {
  font-size: 0.9rem;
  text-align: center;
  color: #777;
  margin-bottom: 1rem;
}

.blog-article-tags {
  text-align: center;
  margin-bottom: 1rem;
  display: flex;
  gap: 0.5rem;
  justify-content: center;
  flex-wrap: wrap;
}

.blog-article-tag {
  background: #e0e0f8;
  color: #555;
  border-radius: 12px;
  padding: 0.2rem 0.6rem;
  font-size: 0.8rem;
}

.blog-article-content {
  line-height: 1.8;
  font-size: 1rem;
  color: #444;
}

.blog-article-content p {
  margin-bottom: 1rem;
}

.blog-article-content h2 {
  font-size: 1.5rem;
  margin-top: 2rem;
  color: #0077cc;
}
</style>

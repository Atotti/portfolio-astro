---
export interface Props {
    percentage: number;
    color?: string;
}

const { percentage, color = "linear-gradient(to right, #0077cc, #00a0ff)" } = Astro.props;
---

<div class="progress-bar-container">
    <div class="progress-bar">
        <div
            class="progress"
            style={`width: ${percentage}%; background: ${color};`}
        ></div>
    </div>
</div>

<style>
.progress-bar-container {
    margin: 10px 0;
}

.progress-label {
    font-size: 1rem;
    margin-bottom: 5px;
    color: #333;
    font-family: 'Noto Sans JP Variable', sans-serif;
}

.progress-bar {
    width: 100%;
    height: 5px;
    background-color: #e0e0e0;
    border-radius: 5px;
    overflow: hidden;
}

.progress {
    height: 100%;
    border-radius: 5px;
    transition: width 0.5s ease-in-out;
}
</style>
